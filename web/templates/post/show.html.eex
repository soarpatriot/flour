
<div class="row">
  <%= for photo <- @post.photos do %>
    <a class="carousel-item" href="<%= Flour.Photo.url(photo,:original)%>" data-gallery>
      <img class="responsive-img" src="<%= Flour.Photo.url(photo, :thumb) %>"/>
    </a>
  <% end %>
</div>
<ul>

  <li>
    <%= @post.title %>
  </li>

  <li>
    <%= @post.content %>
  </li>

</ul>

<%= link "Edit", to: post_path(@conn, :edit, @post) %>
<%= link "Back", to: post_path(@conn, :index) %>
